<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Predict Disease — SymptoCare</title>
    <link rel="stylesheet" href="{{ url_for('static', filename='style.css') }}">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <div class="prediction-card">
        <h2>Find Possible Diseases by Symptom</h2>

        {% if error %}
            <div class="alert alert-error">{{ error }}</div>
        {% endif %}

        <form method="POST" class="search-form">
            <div class="search-row">
                <input class="search-input" type="text" name="search_symptoms" placeholder="Type symptoms, comma separated — e.g. fever, cough" value="{{ search_symptoms or '' }}">
                <button type="submit" class="btn primary-btn">Search</button>
            </div>
            <p class="muted">Enter one or more symptoms (comma separated). Results show top dataset diseases that match the entered symptoms.</p>
        </form>

        {% if matched_diseases %}
            <div class="result-box">
                <h3>Top Possible Diseases</h3>
                <ul class="disease-list">
                    {% for d, cnt in top_diseases %}
                        <li class="disease-item"> 
                            <span class="disease-name">{{ d }}</span>
                            <span class="badge">{{ cnt }}</span>
                        </li>
                    {% endfor %}
                </ul>
            </div>
            {% if remedies %}
                <div class="result-box" style="margin-top:12px;background:#fffaf0;border-left-color:#f59e0b;">
                    <h3>Home Remedies — {{ top_diseases[0][0] }}</h3>
                    <ul class="remedies-list">
                        {% for r in remedies %}
                            <li>{{ r }}</li>
                        {% endfor %}
                    </ul>
                </div>
            {% endif %}
        {% elif search_symptoms is defined and search_symptoms %}
            <div class="result-box">
                <h3>No matches</h3>
                <p class="muted">No dataset rows match '{{ search_symptoms }}'. Try slightly different symptom terms or check spelling.</p>
            </div>
        {% endif %}

        <div style="text-align:center;margin-top:18px;">
            <a href="{{ url_for('home') }}" class="btn secondary-btn">Back to Home</a>
        </div>
    </div>
</body>
</html>
